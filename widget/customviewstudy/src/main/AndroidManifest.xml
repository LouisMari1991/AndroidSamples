<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sync.customviewstudy">

  <!--网络-->
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <!--选择照片所需权限-->
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
      android:name=".app.ViewApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".activity.CustomTitleViewActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.CustomImageViewActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.CustomProgressBarActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.CustomVolumeControlBarActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.CustomImgContainerActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.VDHLayoutActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.VDHDeepLayoutActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.DeepUnderstandAttrActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.RoundImageActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.TaiJiActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.FlowLayoutActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".activity.SmileActivity"
        android:screenOrientation="portrait"/>
  </application>


</manifest>