<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="CustomTitleView">
    <attr format="string" name="titleText"/>
    <attr format="color" name="titleTextColor"/>
    <attr format="dimension" name="titleTextSize"/>
  </declare-styleable>

  <declare-styleable name="CustomImageView">
    <attr format="string" name="imgTitleText"/>
    <attr format="dimension" name="imgTitleTextSize"/>
    <attr format="color" name="imgTitleTextColor"/>
    <attr format="reference" name="image"/>
    <attr name="imgScaleType">
      <enum name="fillXY" value="0"/>
      <enum name="center" value="1"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="CustomProgressBar">
    <attr format="color" name="firstColor"/>
    <attr format="color" name="secondColor"/>
    <attr format="dimension" name="circleWidth"/>
    <attr format="integer" name="speed"/>
  </declare-styleable>

  <declare-styleable name="CustomVolumeControlBar">
    <attr format="color" name="vFirstColor"/>
    <attr format="color" name="vSecondColor"/>
    <attr format="dimension" name="vCircleWidth"/>
    <attr format="integer" name="dotCount"/>
    <attr format="integer" name="splitSize"/>
    <attr format="reference" name="bg"/>
  </declare-styleable>

</resources>