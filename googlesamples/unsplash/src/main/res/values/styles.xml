<resources>

  <!-- Base application theme. -->
  <style name="App" parent="@android:style/Theme.Material.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>
  
  <style name="App.Home">
    <item name="android:windowExitAnimation">@transition/grid_exit</item>
    <item name="android:windowReenterTransition">@transition/grid_reenter</item>
  </style>

  <style name="App.Details">
    <item name="android:windowSharedElementEnterTransition">
      @transition/shared_main_detail
    </item>
  </style>

</resources>
